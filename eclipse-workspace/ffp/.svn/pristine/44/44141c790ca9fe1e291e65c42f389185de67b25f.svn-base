public interface IEncrypt {

    /**
     * 加密
     * 
     * @param data 原始数据
     * @param key 加密密钥
     * @return 加密后数据
     */
    String encode(String data, String key);

    /**
     * 解密
     * 
     * @param data 加密数据
     * @param key 加密密钥
     * @return 原始数据
     */
    String decode(String data, String key);

