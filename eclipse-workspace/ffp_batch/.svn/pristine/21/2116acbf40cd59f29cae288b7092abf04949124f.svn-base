	private BatchLogger _logger = BatchLogger.getLogger("BATCH_LISTENER_SESSION", String.valueOf(Thread.currentThread().getId()), FFPReceiveFileServerThread.class);
	private int SO_TIME_OUT = 60000;
	private String jnlNo;
