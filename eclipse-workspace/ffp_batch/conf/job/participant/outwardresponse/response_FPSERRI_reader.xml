<?xml version="1.0" encoding="UTF-8"?>
<job-config>
	<fixed-settings>
		<job-id>RESPONSE_FPSERRI_READER</job-id>
		<run-frequency>A</run-frequency>
		<rerun-type>FromBegin</rerun-type>
	</fixed-settings>
	<action-flow>
		<action>
			<action-name>isbDownload</action-name>
			<action-type>JavaSysCall</action-type>						
			<processor>com.forms.batch.job.commom.FFPDownloadJob</processor>
			<parameters>
					<parameter>
						<name>transfer-name</name>
						<value>isb</value>
					</parameter>
					<file>
						<remote-path>/ICLFPS/IN/</remote-path>
						<local-path>/ICLFPS/IN/</local-path>
						<backup-file-path>/ICLFPS/IN/#{YYYYMMDD}/</backup-file-path>
						<remote-file-name>FPSERRI#{clearingcode}(\d){16}.xml</remote-file-name>		
					</file>
			</parameters>
		</action>
		<action>
			<action-name>READ FPSERRI RESPONSE FILE</action-name>
			<action-type>JavaSysCall</action-type>						
			<processor>com.forms.batch.job.unit.participant.rejectedmessage.RejectedMessageOutwardBatchResponseFileReader</processor>
			<parameters>
				<local-file-path>/ICLFPS/IN/</local-file-path>
				<filename-pattern>FPSERRI#{clearingcode}(\d){16}.xml</filename-pattern>
			</parameters>
		</action>
	 </action-flow>
</job-config>