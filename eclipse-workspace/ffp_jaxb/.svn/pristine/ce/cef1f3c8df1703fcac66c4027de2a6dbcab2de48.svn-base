<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- simple type String -->
	<xs:simpleType name="Max2NumericText">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]{2}" />
		</xs:restriction>
	</xs:simpleType>

	<!-- mmbid type 3n -->
	<xs:simpleType name="MmbIdType">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]{3}" />
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="Max3NumericText">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]{1,8}" />
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="Max14NumericText">
		<xs:restriction base="xs:string">
			<xs:pattern value="[0-9]{1,14}" />
		</xs:restriction>
	</xs:simpleType>

	<!-- phone -->
	<xs:simpleType name="PhoneNumber">
		<xs:restriction base="xs:string">
			<xs:pattern value="\+[0-9]{1,3}-[0-9()+\-]{1,30}" />
		</xs:restriction>
	</xs:simpleType>

	<!-- simple type Amount -->
	<xs:simpleType name="Restricted15Digit2AmountType">
		<xs:restriction base="xs:decimal">
			<xs:fractionDigits value="2" />
			<xs:totalDigits value="17" />
			<xs:minInclusive value="0" />
			<xs:maxInclusive value="999999999999999.99" />
		</xs:restriction>
	</xs:simpleType>
</xs:schema>